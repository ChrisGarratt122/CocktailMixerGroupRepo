<body>

<!--///////////////////////////////////
          Page Logo
/////////////////////////////////// ---->
<% include ../partials/logo %>

<!--///////////////////////////////////
        Navigation  Bar
/////////////////////////////////// ---->
<section class="nav-container">
  <% include ../partials/header %>
</section>

<!--///////////////////////////////////
      MyAccount Container & Text
/////////////////////////////////// ---->

<main class="contact-page col-md-12">
  <section class="contact-box">
  <h2>Your Account!</h2>

  <!--///////////////////////////////////
        MyAccount Template & Inputs
  /////////////////////////////////// ---->
  <form id="myAccountForm" action="/updateuser" method="POST">
      <aside class="form-group row contact-focus account-page">
        <label for="colFormLabelSm" class="col-sm-5 col-form-label col-form-label-sm">Name</label>

          <input id="inputName" name="name" type="name" class="" placeholder="Enter Username" readonly>


      </aside>
      <aside class="form-group row contact-focus account-page">
        <label for="colFormLabelSm" class="col-sm-5 col-form-label col-form-label-sm">Email</label>

          <input id="inputEmail" name="email" type="email" class="" placeholder="Example@gmail.com">

      </aside>
      <aside class="form-group row contact-focus account-page">
        <label for="field" class="col-sm-5 col-form-label col-form-label-sm">Change Password</label>

          <input id="inputPassword" name="password" type="password" class="password" placeholder="Enter Password">

      </aside>
      <aside class="form-group row contact-focus account-page">
        <label for="field" class="col-sm-5 col-form-label col-form-label-sm">Confirm Password</label>

        <input id="inputConPassword" name="conPassword" type="password" class="password" placeholder="Confirm Password">

      </aside>
      <input class="submit" type="submit" value="Save Changes">
      <h3 id="message"><%= typeof message!='undefined' ? message : '' %></h3>
   </form>
 </section>
</main>




<% include ../partials/footer %>

<!--myCocktails.js only relevant to this page-->
<script src="js/profile.js"></script>


</body>
</html>
